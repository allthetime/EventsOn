<% if @planner && @planner.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @planner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/signup/event_planner" method="post" enctype='multipart/form-data' runat="server">

  <div>
  username
    <input 
      type="text" 
      name="name" 
      value="<%= @planner.name %>"/>
  </div>
  <div>
  email
    <input 
      type="text" 
      name="email" 
      value="<%= @planner.email %>"/>
  </div>
  <div>
  phone(optional)
    <input 
      type="text" 
      name="phone_number" 
      value="<%= @planner.phone_number %>"/>
  </div>
  <div>
  password
    <input 
      type="password" 
      name="password"/>
  </div>
  <div>
  avatar
 <input type="file" name="photo" accept=".jpg,.gif,.png" required> 

  </div>      
  <div>
    <input type="submit"/>
  </div>

</form>